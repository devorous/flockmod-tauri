{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Flockmod",
  "version": "1.0.0",
  "identifier": "com.flock.mod",
  "build": {
    "devUrl": "https://flockmod.com/draw/",
    "frontendDist": "https://flockmod.com/draw/"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Flockmod",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
